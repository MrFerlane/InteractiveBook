<h1>Listing acts</h1>

<table>
  <thead>
    <tr>
      <th>Page</th>
      <th>Description</th>
      <th>Success page</th>
      <th>Fail page</th>
      <th>Time fail page</th>
      <th>Required time</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @acts.each do |act| %>
      <tr>
        <td><%= act.page_id %></td>
        <td><%= act.description %></td>
        <td><%= act.success_page %></td>
        <td><%= act.fail_page %></td>
        <td><%= act.time_fail_page %></td>
        <td><%= act.required_time %></td>
        <td><%= link_to 'Show', act %></td>
        <td><%= link_to 'Edit', edit_act_path(act) %></td>
        <td><%= link_to 'Destroy', act, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

