<h1>Доступные персонажи для книги <%= @book.name %> </h1>

<table>
  <thead>
    <tr>
      <th>Имя</th>
      <th>Описание</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @characters.each do |character| %>
      <tr>
        <td><%= character.name %></td>
        <td><%= character.description %></td>
        <td><%= link_to 'Показать', character %></td>
        <td><%= link_to 'Удалить', { controller: 'characters', action: 'destroy',id: character.id, book_id: @book.id } , method: :delete, data: { confirm: 'Вы уверены?' }%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Добавить нового персонажа', { controller: 'characters', action: 'new', book_id: @book.id} %><br>
<%= link_to 'Назад к книге', { controller: 'books', action: 'show', id: @book.id }%><br>

