<%= form_for(@condition) do |f| %>
  <% if @condition.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@condition.errors.count, "error") %> prohibited this condition from being saved:</h2>

      <ul>
      <% @condition.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="hidden">
    <%=  f.number_field :act_id , value: @act.id %>
  </div>

  <div class="field">
    <%= f.label :"Класс" %><br>
    <%= f.select(:source_class, @source_classes ) %>
  </div>
  <div class="field">
    <%= f.label :"Название" %><br>
    <%= f.text_field :source_name %>
  </div>
  <div class="field">
    <%= f.label :"Условие" %><br>
    <%= f.select(:condition_class,  @condition_classes) %>
  </div>
  <div class="field">
    <%= f.label :"Значение" %><br>
    <%= f.number_field :value %>
  </div>
  <div class="actions">
    <%= f.submit "Добавить" %>
  </div>
<% end %>

<script type="text/javascript">
    $(window).ready(function(){
        $(".hidden").hide();
    });
</script>
