    <%= f.label :"Название" %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :"Краткое описание" %><br>
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :"Статус" %>
    <%= f.text_field :status, { value: "draft" , disabled: true } %>
  </div>
